{
  "metadata": {
    "title": "Comprehensive Molar Weight Database for Ceramics: 1912-2024",
    "version": "2.0",
    "created": "2026-02-09",
    "description": "Complete historical database of atomic and molecular weights used in ceramic glaze chemistry, spanning 112 years from R.T. Stull's original research to current IUPAC standards",
    "purpose": "Enable accurate cross-era glaze calculations, historical recipe reproduction, and academic research in computational ceramics",
    "author": "Ryan - ConduitBridge / Ceramics Computing",
    "last_updated": "2026-02-09T05:57:46.588343"
  },
  "historical_context": {
    "eras": [
      {
        "name": "Pre-IUPAC Era",
        "period": "1882-1920",
        "standard": "O = 16",
        "authority": "International Committee on Atomic Weights (formed 1899)",
        "significance": "Foundation of systematic atomic weight determination",
        "key_events": [
          { "year": 1882, "event": "F.W. Clarke's first systematic recalculation" },
          { "year": 1899, "event": "International Committee formed (56 delegates, 11 countries)" },
          { "year": 1902, "event": "First International Atomic Weight Table published" },
          { "year": 1903, "event": "Oxygen = 16 adopted as standard" },
          { "year": 1912, "event": "R.T. Stull publishes revolutionary glaze research" }
        ]
      },
      {
        "name": "Early IUPAC Era",
        "period": "1920-1961",
        "standard": "O = 16",
        "authority": "IUPAC Commission on Atomic Weights",
        "significance": "International standardization begins",
        "key_events": [
          { "year": 1920, "event": "IUPAC formally established" },
          { "year": 1929, "event": "Oxygen isotopes discovered - O-16, O-17, O-18" },
          { "year": 1960, "event": "Last publications using O=16 standard" }
        ]
      },
      {
        "name": "Carbon-12 Era",
        "period": "1961-2009",
        "standard": "C-12 = 12",
        "authority": "IUPAC CIAAW",
        "significance": "Modern precision measurements enabled",
        "key_events": [
          { "year": 1961, "event": "MAJOR CHANGE: Switch from O=16 to C-12 standard" },
          { "year": 1969, "event": "Gadolinium revised (not updated again until 2024!)" },
          { "year": 1983, "event": "Zirconium revised (not updated again until 2024!)" },
          { "year": 2007, "event": "Lutetium revised" }
        ]
      },
      {
        "name": "Interval Notation Era",
        "period": "2009-Present",
        "standard": "C-12 = 12 (with intervals)",
        "authority": "IUPAC CIAAW",
        "significance": "Recognition of natural isotopic variation",
        "key_events": [
          { "year": 2009, "event": "Interval notation introduced for 10 elements" },
          { "year": 2011, "event": "Br and Mg added to interval list" },
          { "year": 2021, "event": "Ar and Pb changed to intervals" },
          { "year": 2024, "event": "Gd, Lu, Zr revised after decades" }
        ]
      }
    ],
    "stull_1912_significance": {
      "researcher": {
        "name": "Ray Thomas Stull",
        "life": "1875-1944",
        "position": "Professor of Ceramic Engineering, University of Illinois"
      },
      "publication": {
        "title": "Influences of Variable Silica and Alumina on Porcelain Glazes of Constant RO",
        "journal": "Transactions of the American Ceramic Society",
        "year": 1912,
        "pages": "62-70"
      },
      "methodology": {
        "firing_cone": 11,
        "firing_temp_f": 2340,
        "firing_temp_c": 1282,
        "flux_composition": "0.3 K\u2082O : 0.7 CaO (constant)",
        "flux_ratio_significance": "Represents highest durability (research-proven)",
        "variables": "Only SiO\u2082 and Al\u2082O\u2083 amounts varied",
        "formula_system": "Unity Molecular Formula (UMF)"
      },
      "impact": {
        "revolutionary": true,
        "description": "Moved glaze formulation from trial-and-error to predictive science",
        "continuous_use_years": 112,
        "modern_software": ["Glazy", "DigitalFire Insight-live", "Ceramic Materials Workshop", "HyperGlaze"]
      },
      "historical_atomic_weights_used": {
        "standard": "O = 16 (1903-1961)",
        "note": "Using 1912 atomic weights vs modern weights causes glaze plots to shift on Stull chart"
      }
    },
    "atomic_weight_evolution": {
      "1912_vs_2023_key_differences": {
        "Si": { "1912_O16": 28.3, "1912_C12_equiv": 28.28, "2023": 28.085, "difference": -0.195, "percent_change": -0.69, "impact": "Higher 1912 value shifts SiO\u2082 calculations" },
        "Al": { "1912_O16": 27.1, "1912_C12_equiv": 27.08, "2023": 26.982, "difference": -0.098, "percent_change": -0.36, "impact": "Higher 1912 value shifts Al\u2082O\u2083 calculations" },
        "Ca": { "1912_O16": 40.1, "2023": 40.078, "difference": 0.022, "note": "Minimal change" },
        "K": { "1912_O16": 39.1, "2023": 39.098, "difference": -0.002, "note": "Essentially unchanged" }
      },
      "oxide_calculations_1912_vs_2023": {
        "SiO2": { "1912_approx": 60.3, "2023": 60.083, "difference": 0.217, "percent_diff": 0.36 },
        "Al2O3": { "1912_approx": 102.2, "2023": 101.96, "difference": 0.24, "percent_diff": 0.24 },
        "CaO": { "1912_approx": 56.1, "2023": 56.077, "difference": 0.023, "percent_diff": 0.04 },
        "K2O": { "1912_approx": 94.2, "2023": 94.196, "difference": 0.004, "percent_diff": 0.0 }
      },
      "stull_chart_impact": {
        "description": "Plotting historical glazes with modern atomic weights causes coordinate shifts",
        "sio2_axis": "Shifted LEFT (lower apparent silica)",
        "al2o3_axis": "Shifted DOWN (lower apparent alumina)",
        "practical_result": "A 1912 'glossy' glaze might plot as 'matte' with 2023 weights",
        "solution": "Use era-appropriate atomic weights for historical recipe reproduction"
      }
    }
  },
